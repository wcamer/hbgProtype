@page "/room/{RoomCode}"
@using Microsoft.AspNetCore.SignalR.Client
@using HogwartsBattle.Core.Game
@inject NavigationManager Nav
@inject HogwartsBattle.Server.Services.IImageAssetService Image

<h1>Room @RoomCode</h1>

@if (State is null)
{
    <p>Connecting...</p>
}
else
{
    <div class="mb-2">
        <strong>Phase:</strong> @State.Phase
        @if (State.Phase == GamePhase.Lobby)
        {
            <button class="btn btn-primary btn-sm ms-2" @onclick=StartGame>Start Game</button>
        }
    </div>

    @if (State.Phase == GamePhase.CharacterCreation)
    {
        <a class="btn btn-warning" href="/character/@RoomCode">Configure Character</a>
    }

    <div class="row g-2">
        <div class="col-md-4">
            <h4>Location</h4>
            @if (State.ActiveLocation is not null)
            {
                <div class="card p-2">
                    <img src="@Image.UrlFor(State.ActiveLocation.ImageKey.Length==0?"location":State.ActiveLocation.ImageKey)" style="height:80px" />
                    <div>@State.ActiveLocation.Name</div>
                    <div>
                        Control: @State.LocationControl / @State.ActiveLocation.ControlTrackLength
                        <img src="@Image.UrlFor("control")" style="height:20px" />
                    </div>
                </div>
            }
            <h4 class="mt-3">Villains</h4>
            @foreach (var v in State.ActiveVillains)
            {
                var isDefeated = v.CurrentHealth <= 0;
                <div class="card p-2 mb-2">
                    <img src="@Image.UrlFor(v.ImageKey.Length==0?"villain":v.ImageKey)" style="height:60px; opacity:@(isDefeated?0.5:1)" />
                    <div>
                        @v.Name (@v.CurrentHealth/@v.MaxHealth)
                        @if (isDefeated)
                        {
                            <span class="badge text-bg-success ms-2">Defeated</span>
                        }
                    </div>
                    @if (!isDefeated && State.Players[State.ActivePlayerIndex].Attack > 0 && State.Phase == GamePhase.InProgress)
                    {
                        <div class="mt-1 d-flex gap-1">
                            <button class="btn btn-sm btn-danger" @onclick="() => AttackVillain(v.Id, 1)">Spend 1 Attack</button>
                            <button class="btn btn-sm btn-outline-danger" title="Spend all available attack" @onclick="() => AttackVillain(v.Id, State.Players[State.ActivePlayerIndex].Attack)">Spend All</button>
                        </div>
                    }
                </div>
            }

            <h4 class="mt-3">Log</h4>
            <div class="card p-2" style="max-height:240px; overflow:auto">
                @foreach (var line in State.Log.TakeLast(15))
                {
                    <div class="small">@line</div>
                }
            </div>
        </div>
        <div class="col-md-8">
            <h4>Market</h4>
            <div class="d-flex flex-wrap gap-2">
                @foreach (var c in State.Supply)
                {
                    <div class="card p-2" style="width:160px">
                        <img src="@Image.UrlFor(c.ImageKey)" style="height:60px" />
                        <div class="fw-bold">@c.Name</div>
                        <div class="small">@c.Text</div>
                        <div class="mt-1">Cost: @c.Cost <img src="@Image.UrlFor("influence")" style="height:18px" /></div>
                        <button class="btn btn-sm btn-success mt-1" @onclick="() => BuyCard(c.Id)">Buy</button>
                    </div>
                }
            </div>

            <h4 class="mt-3">Players</h4>
            @for (int i = 0; i < State.Players.Count; i++)
            {
                var p = State.Players[i];
                var heroName = string.IsNullOrWhiteSpace(p.Character.DisplayName) ? p.Name : $"{p.Name} - {p.Character.DisplayName}";
                <div class="card p-2 mb-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center gap-2">
                            <img src="@Image.UrlFor("character")" style="height:32px;width:32px" />
                            <div><strong>@heroName</strong> HP @p.Health/@p.MaxHealth | Inf @p.Influence <img src="@Image.UrlFor("influence")" style="height:16px" /> | Atk @p.Attack <img src="@Image.UrlFor("attack")" style="height:16px" /></div>
                        </div>
                        @if (i == State.ActivePlayerIndex)
                        {
                            <span class="badge text-bg-primary">Active</span>
                        }
                        @if (State.Phase == GamePhase.Completed)
                        {
                            <span class="badge text-bg-danger ms-2">Game Over</span>
                        }
                    </div>

                    @if (i == State.ActivePlayerIndex && State.Phase == GamePhase.InProgress)
                    {
                        <div class="mt-2">
                            <strong>Hand</strong>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var id in p.Hand)
                                {
                                    var card = State.CardIndex[id];
                                    <div class="card p-2" style="width:140px">
                                        <img src="@Image.UrlFor(card.ImageKey)" style="height:48px" />
                                        <div class="fw-bold">@card.Name</div>
                                        <div class="small">@card.Text</div>
                                        <div class="d-flex gap-1 mt-1">
                                            <button class="btn btn-sm btn-primary" @onclick="() => PlayCard(id)">Play</button>
                                            <button class="btn btn-sm btn-outline-secondary" title="Swift: discard and draw" @onclick="() => UseSwiftDiscard(id)">Swift</button>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="mt-2 d-flex align-items-center gap-2 flex-wrap">
                                <button class="btn btn-secondary" @onclick=EndTurn>End Turn</button>
                                <div class="d-flex align-items-center gap-2">
                                    <label class="small mb-0">Mentor:</label>
                                    <select class="form-select form-select-sm" style="width:auto" @bind=mentorTargetId>
                                        <option value="">Choose hero</option>
                                        @for (int j = 0; j < State.Players.Count; j++)
                                        {
                                            if (j == State.ActivePlayerIndex) { continue; }
                                            var other = State.Players[j];
                                            <option value="@other.PlayerId">@other.Name</option>
                                        }
                                    </select>
                                    <button class="btn btn-sm btn-outline-info" disabled="@string.IsNullOrEmpty(mentorTargetId)" @onclick="() => UseMentor(mentorTargetId!)">Give Draw</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public string RoomCode { get; set; } = string.Empty;

    private HubConnection? _hub;
    private GameState? State;
    private string? mentorTargetId;

    protected override async Task OnInitializedAsync()
    {
        _hub = new HubConnectionBuilder()
            .WithUrl(Nav.ToAbsoluteUri("/hubs/game"))
            .WithAutomaticReconnect()
            .Build();

        _hub.On<GameState>("GameUpdated", s =>
        {
            State = s;
            InvokeAsync(StateHasChanged);
        });

        _hub.Reconnected += async (string? _newId) =>
        {
            try { await _hub.InvokeAsync("Attach", RoomCode); } catch { }
        };

        await _hub.StartAsync();
        await _hub.InvokeAsync("Attach", RoomCode);
    }

    private Task StartGame() => _hub!.InvokeAsync("StartGame");
    private Task PlayCard(int id) => _hub!.InvokeAsync("PlayCard", id);
    private Task BuyCard(int id) => _hub!.InvokeAsync("BuyCard", id);
    private Task EndTurn() => _hub!.InvokeAsync("EndTurn");
    private Task AttackVillain(int villainId, int amount) => _hub!.InvokeAsync("AttackVillain", villainId, amount);
    private Task UseMentor(string targetPlayerId) => _hub!.InvokeAsync("UseMentor", targetPlayerId);
    private Task UseSwiftDiscard(int cardId) => _hub!.InvokeAsync("UseSwiftDiscard", cardId);
}